<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffffff"
                              android:startColor="#ffffff" android:type="linear" />

                    <stroke android:width="1dp" android:color="@color/colorStock" />

                    <corners android:radius="10dp" />

                    <padding android:bottom="6dp" android:left="3dp" android:right="10dp" android:top="6dp" />
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@mipmap/chevron_with_circle_down" />

            </item>

        </layer-list>

    </item>

</selector>
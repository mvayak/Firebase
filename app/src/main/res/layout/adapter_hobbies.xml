<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <androidx.appcompat.widget.AppCompatCheckBox
            android:text=""
            android:button="@drawable/custom_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxAdapter" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/hobbies"
            android:layout_width="0dp"
            android:gravity="center"
            android:background="@drawable/rect_corner_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            style="@style/TextTitleStyleBold"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle"
            app:layout_constraintTop_toTopOf="@+id/checkBoxAdapter"
            app:layout_constraintBottom_toBottomOf="@+id/checkBoxAdapter"
            app:layout_constraintStart_toEndOf="@+id/checkBoxAdapter"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>